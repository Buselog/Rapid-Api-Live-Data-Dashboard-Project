@model RapidAPIProject.Models.WeatherViewModel

<div class="mdc-layout-grid__cell stretch-card mdc-layout-grid__cell--span-4-desktop mdc-layout-grid__cell--span-4-tablet">
	<div class="mdc-card info-card info-card--danger">
		<div class="card-inner">
			<h5 class="card-title">@Model.city.name</h5>
			<h5 class="font-weight-light pb-2 mb-1"><b>@Model.list[0].weather?[0].main</b></h5>
			<h5 class="font-weight-light pb-2 mb-1 border-bottom">
				<b>
					@((Model.list[0].main.temp - 273.15).ToString("0.##")) °C
				</b>
			</h5>
			<p class="tx-12 text-muted">@Model.list[0].dt_txt</p>
			<div class="card-icon-wrapper">
				<img src="@($"https://openweathermap.org/img/wn/{Model.list[0].weather[0].icon}@2x.png")" alt="icon" style="width:75px;" />
			</div>
		</div>
	</div>
</div>